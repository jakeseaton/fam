// Major global variables for whole site, i.e. fonts and borders etc
// Should be read into each of the member stylus sheets so that they can
// override them if they wish
@import url("http://fonts.googleapis.com/css?family=Josefin+Sans")
MainFont = "Josefin Sans", cursive

TopImageHeight = 500px
FontColor = gray
CircleSize = 190px
ProfilePadding = 245px
circularity()
	width arguments
	height arguments
	border-radius arguments
body
	margin 0px
	img
		&#top-image
			height TopImageHeight
			width 100%
		&#profile-image
			circularity(CircleSize)
			display inline-block
			float left

	h1
		text-align center
	#profile-image-wrapper
		text-align center
		height CircleSize
		padding-left ProfilePadding
		padding-right ProfilePadding
		margin-bottom 35px
		#profile-text
			float right
			width 75%
			padding-top 40px
			text-align left
			font-size 25px
	#circles
		margin-top 20px
		.user-wrapper
			margin-top 40px
			.user-name
				margin-top 10px
			i
				font-size 80px


#activities
	.activity-wrapper
		width 100%
		height 100px
		text-align center
		margin-bottom 80px
	.activity
		padding-left 20%
		padding-right 20%
		height 100%
		.activity-icon
			float left
			circularity(115px)
			text-align center
			color white
			display inline-block
			i
				padding-top 30px
				font-size 75px
		.activity-text
			float right
			text-align left
			width 80%
			padding-top 10px
		.activity-title
			font-size 20px
			font-weight bold
		.activity-description
			font-size 20px

